<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="gitpushforce.comp3717.bcit.ca.bctrafficcams.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView2" />



    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        map:cameraTargetLat="49.2189"
        map:cameraTargetLng="-122.9177"
        map:cameraZoom="12"
        tools:context="gitpushforce.comp3717.bcit.ca.bctrafficcams.MainActivity" />

    <Button
        android:text="Create Route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ownRoutesCreateButton"
        android:onClick="goOwnRoutesCreate"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button" />

    <Button
        android:text="Highway Cameras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="viewCamerasList"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Test Cache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/ownRoutesCreateButton"
        android:onClick="processCaches"
        android:id="@+id/cache"
        style="@style/Widget.AppCompat.Button.Colored" />

</RelativeLayout>
